{
  "name": "@divotion/tinymce-plugin-scaffold",
  "version": "1.2.0",
  "description": "A scaffolding project for developing TinyMCE plugins with modern JavaScript tooling.",
  "main": "dist/plugins/example/plugin.min.js",
  "exports": {
    ".": "./dist/plugins/example/plugin.min.js",
    "./example": "./dist/plugins/example/plugin.min.js",
    "./example/js": "./dist/plugins/example/plugin.min.js",
    "./example/ts": "./dist/plugins/example/plugin-ts.min.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddevries-divotion/tinymce-plugin-scaffold.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_ENV=production rollup -c && pnpm update-exports",
    "build:dev": "cross-env NODE_ENV=development rollup -c && pnpm update-exports",
    "build:demo": "vite build",
    "update-exports": "node scripts/update-exports.js",
    "preview": "vite preview",
    "clean": "rm -rf dist && rm -rf demo/public/dist",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "tinymce",
    "plugin"
  ],
  "author": "Dennis de Vries <dennis.de.vries@divotion.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "files": [
    "dist",
    "demo/public/dist",
    "scripts"
  ],
  "devDependencies": {
    "@eslint/css": "^0.14.0",
    "@eslint/js": "^9.38.0",
    "@eslint/markdown": "^7.5.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "rollup": "^4.52.5",
    "rollup-plugin-delete": "^3.0.1",
    "tinymce": "^8.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "peerDependencies": {
    "tinymce": "^8.2.0"
  },
  "bugs": {
    "url": "https://github.com/ddevries-divotion/tinymce-plugin-scaffold/issues"
  }
}
